<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @conference.name %>
</p>

<p>
  <strong>Acronym:</strong>
  <%= @conference.acronym %>
</p>

<H1>Tracks</H1>
<table>
    <% @tracks.each do |track| %>
        <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
            <td class="list_description">
                <dl>
                    <dt><%= track.name %></dt>
                    <dd><%= track.acronym %></dd>
                </dl>
            </td>
            <td class="list_actions">
                <%= link_to 'Show', track %><br/>
                <%= link_to 'Edit', edit_track_path(track) %><br/>
                <%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
        </tr>
    <% end %>
</table>

<%= button_to 'Create Track', tracks_path(conference_id: @conference) %>

<%= link_to 'Edit', edit_conference_path(@conference) %> |
<%= link_to 'Back', conferences_path %>