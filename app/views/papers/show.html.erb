<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @paper.title %>
</p>
<p>
  <strong>Overall Score:</strong>

  <% @total = @paper.reviews.sum(:score).to_f / @paper.reviews.count(:score)%>
  <%=  number_with_precision(@total, :precision => 2)%>

</p>
<p>
  <strong>Abstract:</strong>
  <%= @paper.abstract %>
</p>

<p>
  <strong>Author:</strong>
  <%= @paper.author %>
</p>

<p>
  <strong>Track:</strong>
  <%= @paper.track.name %>
</p>

<p>
  <strong>Accepted:</strong>
  <%= @paper.accepted %>
</p>
<p>
  <%= link_to "Download A Copy", @paper.attachment_url %>
</p>
<p>

<% if @paper.reviews.size < 3 %>
    <h3>Reviews: </h3> <p> (This paper needs more reviews! Please leave a review.) </p>
<% else %>
    <h3>Reviews:</h3>
<% end %>
<%= link_to 'Create Review', new_review_path(:paper_id => @paper.id),
            :action => "Create", :class => "btn btn-primary btn-sm active"%>

</p>
<table class="table table-hover">
  <th><td><strong>Score</strong></td><td><strong>Date</strong></td><td><strong>View</strong></td></th>
  <% @paper.reviews.each do |review| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

          <tr>
            <td></td>
            <td><%= review.score %></td>
            <td><%= review.date %></td>
            <td class="list_actions">
              <%= link_to 'View Review', review_path(:paper_id => @paper.id) %>
            </td>
          </tr>


      </tr>
  <% end %>
</table>

<%= link_to 'Edit', edit_paper_path(@paper) %> |
<%= link_to 'Back', track_path(@paper.track), :class => "btn btn-primary btn-sm active" %>
