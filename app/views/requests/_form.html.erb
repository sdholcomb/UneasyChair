<%= form_for(request) do |f| %>
  <% if request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :role %>
    <%= f.text_field :role %>

  </div>

  <div class="field">
    <!-- <%= f.text_field :receiver_id %> -->
    <%= f.collection_select(:receiver_id, @contacts, :id, :username, :prompt => true) %>

  </div>

  <%= f.hidden_field :track_id, :value => @track.id %>

  <div class="actions">
    <%= f.button :submit , :class => "btn btn-primary btn-md active"%>
  </div>
<% end %>
