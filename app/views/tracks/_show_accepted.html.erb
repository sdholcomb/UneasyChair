<div  id = "current_tab">
  <ul class="nav nav-tabs">
      <li role="presentation" ><%= link_to 'Need Reviewing', show_needs_reviewing_path(:track_id => @track.id), :remote => true %></li>
      <li role="presentation" ><%= link_to 'Reviewed', show_reviewed_path(:track_id => @track.id), :remote => true %></li>
      <li role="presentation" class="active"><%= link_to 'Accepted', show_accepted_path(:track_id => @track.id), :remote => true %></li>
      <li role="presentation"><%= link_to 'Users', show_users_path(:track_id => @track.id), :remote => true %></li>
  </ul>
  <div class="container">
  <%if !@papers.empty?%>
    <h3>Accepted:</h3>
    <table class="table table-hover">
      <th><h4>Title</h4></th>
      <th><h4>Author</h4></th>
      <% @papers = @track.papers %>
      <% @papers.each do |paper| %>

        <% if paper.accepted.equal?(true)%>

          <tr class="clickable" data-link="<%= paper_path(paper) %>" >

            <td class="list_description">
              <dl>
                <dt><%= paper.title %></dt>
              </dl>
            </td>
            <td class="list_description">
              <dl>
                <dt><%= paper.author %></dt>
              </dl>
            </td>

          </tr>

        <% end %>

      <% end %>
    </table>
    <%else%>
        <H3> No Papers Have Been Accepted </H3>
    <%end%>
  </div>
</div>