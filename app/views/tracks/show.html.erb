
<div class="container">
  <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
              <h1><%= @conference.name %></h1>
        </div>
        <div class="col-md-4"></div>
    </div>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4 col-md-offset-5">
            <h4><%= @conference.acronym %></h4>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>

<div class="container">
    <h2> <%= @track.name %> Track </h2>
</div>
<div class="container">
    <H3>Users</H3>
    <table class="table table-hover">

        <% @user_roles.each do |user_role| %>
            <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
                <td class="list_description">
                    <dl>
                        <dt><%= user_role.user.username %></dt>
                    </dl>
                </td>
                <td class="list_description">
                    <dl>
                        <dt><%= user_role.role %></dt>
                    </dl>
                </td>
                <td class="list_actions">
                    <%= link_to 'Edit', edit_user_role_path(user_role) %> |
                    <%= link_to 'Destroy', user_role, method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
            </tr>
        <% end %>
    </table>
  <h3>Papers</h3>
  <h4>Approved:</h4>
  <table class="table table-hover">
    <% @papers = @track.papers %>
    <% @papers.each do |paper| %>
        <% if paper.accepted.equal?(true) %>

            <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
              <td class="list_description">
                <dl>
                  <dt><%= paper.title %></dt>
                </dl>
              </td>
              <td class="list_description">
                <dl>
                  <dt><%= paper.author %></dt>
                </dl>
              </td>
              <td class="list_actions">
                <%= link_to 'Show', paper %> |
              </td>
            </tr>
        <% end %>
    <% end %>
  </table>
  <h4>Needs Reviewing:</h4>
  <table class="table table-hover">

    <% @papers.each do |paper| %>
        <% if paper.reviews.size < 3 and paper.accepted.equal?(false) %>
        <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
          <td class="list_description">
            <dl>
              <dt><%= paper.title %></dt>
            </dl>
          </td>
          <td class="list_description">
            <dl>
              <dt><%= paper.author %></dt>
            </dl>
          </td>
          <td class="list_actions">
            <%= link_to 'Show', paper %> |
          </td>
        </tr>
            <% end %>
    <% end %>
  </table>
  <h4>Reviewed:</h4>
  <table class="table table-hover">

    <% @papers.each do |paper| %>
        <% if paper.reviews.size > 2  %>
            <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
              <td class="list_description">
                <dl>
                  <dt><%= paper.title %></dt>
                </dl>
              </td>
              <td class="list_description">
                <dl>
                  <dt><%= paper.author %></dt>
                </dl>
              </td>
              <td class="list_actions">
                <%= link_to 'Show', paper %> |
              </td>
            </tr>
        <% end %>
    <% end %>
  </table>

</div>
<div class="container">
    <%= link_to 'Invite User', new_request_path(track_id: @track), :class => "btn btn-primary btn-md active" %>
    <%= link_to 'Add Paper', new_paper_path(track_id: @track), :class => "btn btn-primary btn-md active" %>
    <%= link_to 'Edit', edit_track_path(@track), :class => "btn btn-primary btn-md active" %>
    <%= link_to 'Back', @conference, :class => "btn btn-primary btn-md active"%>
</div>
